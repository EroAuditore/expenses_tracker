<% @groups.each do |group| %> 
<li>
<div class="card mb-3">
  <div class="row g-0 d-flex">
    <div class="col-4">
    <%= render_image_group(group) %>
      
    </div>
    <div class="col-8">
      <div class="card-body">
        <h5 class="card-title"><%= group.name %></h5>
        <p class="card-text"><%= group.user.name %></p>
        <p class="card-text"><small class="text-muted"><%= group.created_at.strftime("%Y/%m/%d") %></small></p>
        <div class="btn-group" role="group">
          <%= link_to 'Show', group,  class: "btn btn-outline-primary" %>
          <%= link_to 'Edit', edit_group_path(group),  class: "btn btn-outline-primary" %>
          <%= link_to 'Destroy', group, class: "btn btn-outline-primary", method: :delete, data: { confirm: 'Are you sure?' } %>
   
        </div>
      </div>
    </div>
  </div>
</div>
</li>
<% end %>